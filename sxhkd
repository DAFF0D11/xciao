# Previous tab
control + j
    xciao "ControlMask" "j"

# Next tab
control + k
    xciao "ControlMask" "k"

# Scroll down half page
control + d
    xciao "ControlMask" "d"

# Scroll up half page
control + u
    xciao  "ControlMask" "u"

# Left arrow key
alt + h
    xciao "Mod1Mask" "h"

# Down arrow key
alt + j
    xciao "Mod1Mask" "j"

# Up arrow key
alt + k
    xciao "Mod1Mask" "k"

# Right arrow key
alt + l
    xciao "Mod1Mask" "l"

# Forward history
control + bracketleft
    xciao "ControlMask" "bracketleft"

# Backwards history
control + bracketright
    xciao "ControlMask" "bracketright"
